{
  "name": "__MSG_name__",
  "short_name": "__MSG_shortName__",
  "default_locale": "en",
  "description": "__MSG_description__",
  "author": "Yeefun",
  "version": "2.1.0",
  "manifest_version": 2,
  "permissions": ["declarativeContent", "storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "__MSG_shortName__",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.notion.so/*"],
      "js": ["js/contentscript.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
